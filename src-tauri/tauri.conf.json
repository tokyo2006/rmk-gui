{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RMK-GUI",
  "version": "0.4.0",
  "identifier": "com.rmk.gui",
  "build": {
    "beforeDevCommand": "pnpm web:dev",
    "beforeBuildCommand": "pnpm web:build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "RMK-GUI",
        "width": 1200,
        "height": 800,
        "minHeight": 800,
        "minWidth": 1200,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi",
      "deb",
      "rpm",
      "app"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
