{
  "name": "rmk-gui",
  "type": "module",
  "version": "0.4.0",
  "description": "Gui configuration for RMK based on Tauri and Nuxt",
  "scripts": {
    "nuxt:prepare": "nuxt prepare",
    "keycode:gen": "python codegen/gen.py",
    "postinstall": "run-s keycode:gen nuxt:prepare",
    "js:lint": "eslint",
    "js:fix": "eslint --fix",
    "rust:lint": "cargo clippy --manifest-path src-tauri/Cargo.toml",
    "rust:fix": "cargo clippy --manifest-path src-tauri/Cargo.toml --fix --allow-dirty",
    "lint:check": "run-s js:lint rust:lint",
    "lint:fix": "run-s js:fix rust:fix",
    "web:dev": "nuxt dev",
    "web:build": "nuxt generate",
    "web:tun": "nuxt dev --tunnel",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build"
  },
  "dependencies": {
    "@kcf-hub/kle-serial": "0.17.0",
    "@pinia/nuxt": "0.11.1",
    "@primeuix/themes": "1.2.0",
    "@primevue/forms": "4.3.6",
    "@tauri-apps/api": "2.6.0",
    "pinia": "3.0.3",
    "primeicons": "7.0.0",
    "primevue": "4.3.6",
    "tailwind-scrollbar": "^4.0.2",
    "tailwindcss-primeui": "0.6.1",
    "vue-draggable-plus": "^0.6.0",
    "xz-decompress": "0.2.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.17.0",
    "@nuxt/devtools": "2.6.2",
    "@nuxt/icon": "1.15.0",
    "@nuxtjs/color-mode": "3.5.2",
    "@nuxtjs/tailwindcss": "6.14.0",
    "@primevue/nuxt-module": "4.3.6",
    "@tauri-apps/cli": "2.6.2",
    "@types/w3c-web-hid": "1.0.6",
    "@vueuse/nuxt": "13.5.0",
    "eslint": "^9.31.0",
    "eslint-plugin-format": "^1.0.1",
    "npm-run-all": "^4.1.5",
    "nuxt": "3.17.6",
    "prettier-plugin-tailwindcss": "0.6.13",
    "vue": "^3.5.0",
    "vue-router": "4.5.1"
  }
}
